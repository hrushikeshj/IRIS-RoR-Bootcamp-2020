<!DOCTYPE html>
<html>
  ...
  <body>
    <% if current_user %>
      Logged in as <%= current_user.email %>
      <%= link_to 'Log Out', logout_path %>
      <% if session[:admin]%>
        <p style="color:red;"> Admin</p>
        <% else %>
        <p style="color:red;"> Articles left:<%= session[:private_articles_left] %></p>
      <%end%>
    <% else %>
      <%= link_to 'Sign Up', signup_path %>
      <%= link_to 'Log In', login_path, method: :delete %>
      <p style="color:red;"> Login to read private article</p>
    <% end %>
  </body>

  <%= yield %>
</html>