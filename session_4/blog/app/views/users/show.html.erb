<div class="container user-show">
  <h2>
    <strong>Name:</strong>
    <%= @user.name %>
  </h2>

  <h2 id="h">
    <strong>Email:</strong>
    <%= @user.email %>
  </h2>

  

    <% if @user.id == session[:user_id] || session[:admin] %>
      <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning' %>   
      <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } ,class: ' btn btn-outline-danger'%>
    <% end %>
  <%= link_to 'Back', articles_path, class: "btn btn-outline-dark" %>
</div>